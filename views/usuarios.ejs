<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Usuarios</title>
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/vendor/bootstrap-icons/bootstrap-icons.css">
  <style>
    html, body { height: 100%; }
    body { min-height: 100vh; display: flex; flex-direction: column; background:#f8f9fa; }
    .card { border:none; box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05); }
    .card-header { background:#fff; border-bottom: 2px solid #f8f9fa; font-weight:600; }
    .mono { font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="flex-grow-1">
    <div class="container">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div><i class="bi bi-people-fill me-2"></i>Usuarios</div>
          <button class="btn btn-primary" id="btnNuevoUsuario" type="button">
            <i class="bi bi-plus-lg me-1"></i>Nuevo usuario
          </button>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th>Usuario</th>
                  <th>Nombre</th>
                  <th>Rol</th>
                  <th>Estado</th>
                  <th>Último login</th>
                  <th class="text-end">Acciones</th>
                </tr>
              </thead>
              <tbody id="tbodyUsuarios">
                <% (usuarios || []).forEach(u => { %>
                  <tr data-id="<%= u.id %>">
                    <td class="mono"><%= u.usuario %></td>
                    <td><%= u.nombre || '' %></td>
                    <td><span class="badge text-bg-secondary"><%= u.rol %></span></td>
                    <td>
                      <% if (Number(u.activo) === 1) { %>
                        <span class="badge text-bg-success">Activo</span>
                      <% } else { %>
                        <span class="badge text-bg-secondary">Inactivo</span>
                      <% } %>
                    </td>
                    <td class="small text-muted">
                      <%= u.last_login ? new Date(u.last_login).toLocaleString() : '-' %>
                    </td>
                    <td class="text-end">
                      <div class="btn-group">
                        <button class="btn btn-sm btn-outline-primary" data-action="editar">
                          <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-warning" data-action="password" title="Cambiar contraseña">
                          <i class="bi bi-key"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" data-action="eliminar">
                          <i class="bi bi-trash"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <div class="alert alert-info small mb-0">
            Este panel es solo para <strong>administrador</strong>. Roles: <code>administrador</code>, <code>mesero</code>, <code>cocinero</code>.
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Modal Crear/Editar Usuario -->
  <!-- Relacionado con: routes/usuarios.js (POST/PUT /api/usuarios) -->
  <div class="modal fade" id="usuarioModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-person-badge me-2"></i><span id="usuarioModalTitle">Nuevo usuario</span></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="usuarioId">
          <div class="mb-2">
            <label class="form-label">Usuario</label>
            <input id="usuarioUsuario" class="form-control" placeholder="ej: juan" required>
          </div>
          <div class="mb-2">
            <label class="form-label">Nombre</label>
            <input id="usuarioNombre" class="form-control" placeholder="ej: Juan Pérez">
          </div>
          <div class="mb-2">
            <label class="form-label">Rol</label>
            <select id="usuarioRol" class="form-select">
              <% (roles || []).forEach(r => { %>
                <option value="<%= r %>"><%= r %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-check form-switch mb-2">
            <input class="form-check-input" type="checkbox" role="switch" id="usuarioActivo" checked>
            <label class="form-check-label" for="usuarioActivo">Activo</label>
          </div>

          <div id="wrapPassword" class="mb-2">
            <label class="form-label">Contraseña</label>
            <input id="usuarioPassword" type="password" class="form-control" placeholder="••••••••">
            <div class="form-text">En edición, deja vacío si no quieres cambiarla aquí.</div>
          </div>

          <div id="usuarioError" class="alert alert-danger small d-none mb-0"></div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancelar</button>
          <button class="btn btn-primary" id="btnGuardarUsuario" type="button">
            <i class="bi bi-save me-1"></i>Guardar
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Cambiar Password -->
  <!-- Relacionado con: routes/usuarios.js (PUT /api/usuarios/:id/password) -->
  <div class="modal fade" id="passwordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-key me-2"></i>Cambiar contraseña</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="passwordUserId">
          <div class="mb-2">
            <label class="form-label">Nueva contraseña</label>
            <input id="passwordNueva" type="password" class="form-control" required>
          </div>
          <div class="mb-2">
            <label class="form-label">Confirmar</label>
            <input id="passwordNueva2" type="password" class="form-control" required>
          </div>
          <div id="passwordError" class="alert alert-danger small d-none mb-0"></div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancelar</button>
          <button class="btn btn-warning" id="btnGuardarPassword" type="button">
            <i class="bi bi-check2 me-1"></i>Actualizar
          </button>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/vendor/sweetalert2/sweetalert2.all.min.js"></script>
  <script src="/js/usuarios.js"></script>
</body>
</html>

